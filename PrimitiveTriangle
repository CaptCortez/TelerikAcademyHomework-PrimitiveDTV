using System;

namespace Triangle
{
    class Triangle
    {
        static void Main()
        {
            Console.OutputEncoding = Encoding.Unicode;
            char copyRight = '\u00A9';
            Console.Title = "Triangle Shape Made of " + copyRight + " Symbols";

            Console.WriteLine("    {0}", copyRight);
            Console.WriteLine("   {0} {0}", copyRight);
            Console.WriteLine("  {0}{0}{0}{0}{0}", copyRight);
        }
    }
}
